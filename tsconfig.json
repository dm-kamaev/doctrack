{
  "compilerOptions": {
    "target": "es2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2023"],
    "types": [
      "node",
      "jest"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": ["src", "test"],
  "exclude": [
    "node_modules",
    "./dist",
  ]
}